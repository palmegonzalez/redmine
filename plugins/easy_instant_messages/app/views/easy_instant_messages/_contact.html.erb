<div class="easyim__contact <%= 'easyim__contact--dark' if local_assigns.fetch(:dark, false) %>">
  <% if local_assigns.fetch(:show_link, false) %>
    <%= link_to "", conversation_easy_instant_message_path(contact.id), class: "easyim__overlay-link", remote: true %>
  <% end %>

  <!--<div class="easyim__avatar"><%= avatar(contact, style: :medium) %></div>-->
  <h3 class="easyim__contact__name"><%= link_to_user(contact) %></h3>
  <% if User.current.admin? && contact.is_online? %>
    <span class="online-dot" style='height: 10px; width: 10px; background-color: #40d145; border-radius: 50%; display:inline-block;'></span>
  <% end %>
  <%= link_to conversation_easy_instant_message_path(contact.id), class: 'easyim__contact__history' do %>
    <%= image_tag('history.svg', plugin: :easy_instant_messages) %>
  <% end %>

</div>